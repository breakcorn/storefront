# ==============================================
# SALEOR SVELTEKIT STOREFRONT - ENVIRONMENT CONFIG
# ==============================================
# Copy this file to .env.local, .env.development, .env.production, or .env.test
# and configure values for your environment

# ---------------------------------------------- 
# SALEOR API CONFIGURATION
# ---------------------------------------------- 
# Your Saleor GraphQL API endpoint (REQUIRED)
# Make sure to keep the trailing slash
PUBLIC_SALEOR_API_URL=https://store-qdjgu50o.eu.saleor.cloud/graphql/

# Token for server-side API calls (Optional)
# Only needed for admin operations
SALEOR_APP_TOKEN=

# ---------------------------------------------- 
# STOREFRONT CONFIGURATION  
# ---------------------------------------------- 
# Your storefront URL (for canonical URLs and meta tags)
# Development: http://127.0.0.1:3000
# Production:  http://127.0.0.1:3001 (or https://your-domain.com)
# Test:        http://127.0.0.1:3002
PUBLIC_STOREFRONT_URL=http://127.0.0.1:3000

# ---------------------------------------------- 
# DEPLOYMENT ENVIRONMENT
# ---------------------------------------------- 
# NODE_ENV автоматически устанавливается Vite:
# - development для dev server
# - production для build
# - test для тестов

# ---------------------------------------------- 
# DEVELOPMENT CONFIGURATION
# ---------------------------------------------- 
# Port for development server
# Development: 3000, Production: 3001, Test: 3002
PORT=3000

# ---------------------------------------------- 
# TESTING CONFIGURATION  
# ---------------------------------------------- 
# Base URL for Playwright tests
# Use this to test against specific environments
BASE_URL=

# ---------------------------------------------- 
# ADVANCED CONFIGURATION
# ---------------------------------------------- 
# Enable debug logging
DEBUG=false

# GraphQL introspection (development only)
GRAPHQL_INTROSPECTION=true
